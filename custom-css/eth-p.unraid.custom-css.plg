<?xml version='1.0' standalone='yes'?>

<!DOCTYPE PLUGIN [
<!ENTITY name      "eth-p.unraid.custom-css">
<!ENTITY author    "eth-p">
<!ENTITY version   "2018.09.25">
<!ENTITY launch    "Tools/ActiveStreams">
<!ENTITY pluginURL "https://raw.githubusercontent.com/eth-p/unraid/master/custom-css/&name;.plg">
<!ENTITY source    "/boot/config/plugins/&name;/&name;">
<!ENTITY MD5       "27f76444d48b1e4c8c9f17ac311d4396">
]>

<PLUGIN name="&name;" author="&author;" version="&version;" launch="&launch;" pluginURL="&pluginURL;" min="6.1.9">

<CHANGES>
##&name;

###&version;
- Initial public release.
</CHANGES>

<!--
Copyright (C) 2018 Ethan P. (eth-p)
A plugin for easily adding persistent custom styles to Unraid.
-->

<!-- PRE-INSTALL SCRIPT -->
<FILE Run="/bin/bash">
<INLINE>
# Remove old 'source' packages
MD5=$(md5sum &source;.txz 2>/dev/null|grep -Po '^\S+')
if [[ $MD5 != &MD5; ]]; then
  rm -f &source;*.txz
fi
</INLINE>
</FILE>

<!-- SOURCE PACKAGE -->
<FILE Name="&source;.txz" Run="upgradepkg --install-new --reinstall">
<URL>https://raw.githubusercontent.com/eth-p/unraid/master/custom-css/release/&name;.txz</URL>
<MD5>&MD5;</MD5>
</FILE>

<!-- POST-INSTALL SCRIPT -->
<FILE Run="/bin/bash">
<INLINE>
echo ""
echo "-----------------------------------------------------------"
echo " Plugin &name; is installed."
echo " This plugin requires Dynamix webGui to operate"
echo " Copyright 2018, Ethan P. (eth-p)"
echo " Version: &version;"
echo "-----------------------------------------------------------"
echo ""

# Ensure custom.css exists.
mkdir -p "/boot/config/plugins/&name;" 2>/dev/null
touch "/boot/config/plugins/&name;/custom.css" >/dev/null
</INLINE>
</FILE>

<!-- REMOVE SCRIPT -->
<FILE Run="/bin/bash" Method="remove">
<INLINE>
removepkg &name;
</INLINE>
</FILE>

</PLUGIN>
